<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/border1"
            />
        <LinearLayout
            android:layout_toEndOf="@id/border1"
            android:layout_toRightOf="@+id/border1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/grid">

        <TextView
            android:id="@+id/calendar_date_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/last_date"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/event_id8"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id9"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id10"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id11"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id12"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id13"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="5"
            android:layout_margin="1dp"
            android:layout_row="0"
            />

        <TextView
            android:id="@+id/event_id14"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/event_id15"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/event_id16"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/event_id17"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/event_id18"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:layout_row="1" />

        <TextView
            android:id="@+id/event_id19"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_column="5"
            android:layout_margin="1dp"
            android:layout_row="1" />
    </GridLayout>
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_light"
            android:id="@+id/border2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>