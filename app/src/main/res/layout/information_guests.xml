<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/background"
    android:id="@+id/informationGuest"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="10">

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_margin="15dp"
        android:textColor="@color/textColor"
        android:background="@color/buttonColor"
        android:textSize="20sp"
        android:text="@string/Guests"
        />
    <TextView
        android:id="@+id/tvInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/TutorialFirst"
        android:textColor="@color/textColor"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvInfo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/TutorialSecond"
        android:textColor="@color/textColor"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvInfo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/TutorialThird"
        android:textColor="@color/textColor"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tvInfo6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/TutorialFourth"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

</GridLayout>
</ScrollView>
</LinearLayout>