<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_custom_calendar_week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mon_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/mo"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tue_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tu"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wed_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/we"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/thu_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/th"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fri_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fr"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sat_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sa"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sun_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/su"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">
        <RelativeLayout
            android:id="@+id/mon_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/monvf">

                <include
                    android:id="@+id/mon_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev" />

                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tue_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tuenvf">
                <include android:id="@+id/tue_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wed_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wedvf">
                <include android:id="@+id/wed_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/thu_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thuvf">
                <include android:id="@+id/thu_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/fri_grid"
        android:layout_width="0dp"
        android:layout_height="1000dp"
        android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frivf">
                <include android:id="@+id/fri_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sat_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/satvf">
                <include android:id="@+id/sat_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sun_grid"
            android:layout_width="0dp"
            android:layout_height="1000dp"
            android:layout_weight="1">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sunvf">
                <include android:id="@+id/sun_flipper"
                    layout="@layout/custom_calendar_week_simple_grid_wiev"/>
                <include android:id="@+id/mon_empty"
                    layout="@layout/custom_calendar_week_empty_grid_view"/>
            </ViewFlipper>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>