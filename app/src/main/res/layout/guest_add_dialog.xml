<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guestAddTitle"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/guestAddTitle">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guestNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/Name"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:maxLength="20"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestPhone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/textInputLayoutGuestName">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guestPhone1Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/phone1"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestPhone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/textInputLayoutGuestPhone1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guestPhone2Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/phone2"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_below="@id/textInputLayoutGuestPhone2">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guestEmailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/email1"
                    android:inputType="text"
                    android:maxLength="25"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutGuestEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@id/textInputLayoutGuestEmail"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/guestEmail2Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/email2"
                android:inputType="text"
                android:maxLength="25"
                android:textAlignment="center"
                android:textSize="15sp"
                />
    </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestContact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/textInputLayoutGuestEmail2"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guestContact1Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="@string/contact"
                    android:inputType="text"
                    android:maxLength="25"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutGuestContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_below="@id/textInputLayoutGuestContact1"
                >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/guestContact2Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/contact2"
                android:inputType="text"
                android:maxLength="25"
                android:textAlignment="center"
                android:textSize="15sp"
                />
</android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_below="@id/textInputLayoutGuestContact2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/btnAddGuestOK"
                        android:text="@string/OK"
                        android:clickable="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/btnAddGuestOK"
                        android:layout_centerInParent="true"
                        android:id="@+id/btnAddGuestCancel"
                        android:text="@string/cancel"
                        android:clickable="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>