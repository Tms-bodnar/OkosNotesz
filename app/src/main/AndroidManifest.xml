<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.okosnotesz.okosnotesz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/okos_notesz_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/okos_notesz_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="hu.okosnotesz.okosnotesz.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.okosnotesz.okosnotesz.AdminActivity"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="hu.okosnotesz.okosnotesz.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name="hu.okosnotesz.okosnotesz.BookingActivity" />
        <activity android:name="hu.okosnotesz.okosnotesz.WebViewActivity"/>
    </application>

</manifest>